---
import profile from '../data/profile.json';
---

<section class="min-h-screen flex flex-col justify-center px-6 md:px-12 max-w-7xl mx-auto pt-20 relative">
  <div class="z-10 animate-fade-in-up">
    <div class="inline-block px-3 py-1 mb-6 border border-accent/30 rounded-full bg-accent/5 backdrop-blur-sm">
      <span class="text-accent text-xs md:text-sm font-medium tracking-wider uppercase">Available for AI/ML Roles</span>
    </div>
    
    <h1 class="text-5xl md:text-7xl lg:text-8xl font-heading font-bold tracking-tight text-white mb-6 leading-tight">
      {profile.name.split(' ')[0]} <br />
      <span class="text-transparent bg-clip-text bg-gradient-to-r from-white to-white/50">{profile.name.split(' ').slice(1).join(' ')}</span>
    </h1>
    
    <p class="text-xl md:text-2xl text-text-muted max-w-2xl mb-10 font-light leading-relaxed">
      {profile.title}. <br class="hidden md:block" />
      <span class="text-accent/80">{profile.tagline}</span>
    </p>
    
    <div class="flex flex-wrap gap-4">
      <a href="#work" class="px-8 py-4 bg-white text-primary font-bold rounded-full hover:bg-gray-200 transition-all transform hover:scale-105 shadow-[0_0_20px_rgba(255,255,255,0.3)]">
        View Work
      </a>
      <a href="#contact" class="px-8 py-4 border border-white/20 text-white font-medium rounded-full hover:bg-white/10 transition-all backdrop-blur-sm">
        Contact Me
      </a>
    </div>
  </div>

  <!-- Proof Strip -->
  <div class="absolute bottom-10 left-0 w-full px-6 md:px-12">
    <div class="max-w-7xl mx-auto border-t border-white/10 pt-8">
      <p class="text-xs text-text-muted uppercase tracking-widest mb-4">Trusted By & Featured In</p>
      <div class="flex flex-wrap gap-x-8 gap-y-4 text-sm md:text-base text-white/60 font-medium">
        {profile.proof.map((item) => (
          <span class="hover:text-white transition-colors cursor-default">{item}</span>
        ))}
      </div>
    </div>
  </div>
  
  <!-- Subtle Orb Behind -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-accent/20 rounded-full blur-[150px] -z-10 pointer-events-none opacity-50"></div>
</section>
