---
import profile from '../data/profile.json';
---

<section class="min-h-screen flex items-center relative overflow-hidden pt-20">
  <div class="max-w-7xl mx-auto px-6 md:px-12 w-full z-10">
    <div class="flex flex-col md:flex-row items-center gap-12 lg:gap-20">
      
      <!-- Text Content (Left) -->
      <div class="flex-1 text-center md:text-left animate-fade-in-up">
        <div class="inline-block px-3 py-1 mb-6 border border-accent/30 rounded-full bg-accent/5 backdrop-blur-sm mx-auto md:mx-0">
          <span class="text-accent text-xs md:text-sm font-medium tracking-wider uppercase">Available for AI/ML Roles</span>
        </div>
        
        <h1 class="text-5xl md:text-7xl lg:text-8xl font-heading font-bold tracking-tight text-white mb-6 leading-tight">
          {profile.name.split(' ')[0]} <br />
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-white to-white/50">{profile.name.split(' ').slice(1).join(' ')}</span>
        </h1>
        
        <p class="text-xl md:text-2xl text-text-muted max-w-2xl mb-10 font-light leading-relaxed mx-auto md:mx-0">
          {profile.title}. <br class="hidden md:block" />
          <span class="text-accent/80">{profile.tagline}</span>
        </p>
        
        <div class="flex flex-wrap gap-4 justify-center md:justify-start">
          <a href="#work" class="px-8 py-4 bg-white text-primary font-bold rounded-full hover:bg-gray-200 transition-all transform hover:scale-105 shadow-[0_0_20px_rgba(255,255,255,0.3)]">
            View Work
          </a>
          <a href="#contact" class="px-8 py-4 border border-white/20 text-white font-medium rounded-full hover:bg-white/10 transition-all backdrop-blur-sm">
            Contact Me
          </a>
        </div>
      </div>

      <!-- Image Content (Right) -->
      <div class="flex-1 relative max-w-[400px] md:max-w-none w-full flex justify-center md:justify-end animate-fade-in-up delay-100">
         <div class="relative w-64 h-64 md:w-96 md:h-96 lg:w-[500px] lg:h-[500px]">
            <!-- Decorative rings -->
            <div class="absolute inset-0 border border-accent/20 rounded-full animate-spin-slow-reverse scale-110"></div>
            <div class="absolute inset-0 border border-white/10 rounded-full animate-spin-slow scale-125"></div>
            
            <!-- Image Frame -->
            <div class="relative w-full h-full rounded-full overflow-hidden border-4 border-white/10 shadow-2xl shadow-accent/20">
               <img 
                src="/home/profile_photo.jpg" 
                alt={profile.name}
                class="w-full h-full object-cover"
              />
            </div>

            <!-- Floating Label -->
             <div class="absolute -bottom-6 -right-6 md:right-0 glass-card px-6 py-3 rounded-xl border border-white/10 shadow-xl animate-bounce-slow hidden md:block">
              <span class="text-accent font-bold text-lg">PhD Researcher @ FAU Erlangen</span>
            </div>
         </div>
      </div>

    </div>
  </div>
  
  <!-- Subtle Orb Behind -->
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-accent/20 rounded-full blur-[150px] -z-10 pointer-events-none opacity-40"></div>
</section>

