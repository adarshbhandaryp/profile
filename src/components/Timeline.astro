---
import experience from '../data/experience.json';
---

<div class="relative border-l border-white/10 ml-3 md:ml-6 space-y-12">
  {experience.map((role) => (
    <div class="relative pl-8 md:pl-12">
      <!-- Dot -->
      <div class="absolute -left-[5px] top-2 w-[11px] h-[11px] rounded-full bg-primary border-2 border-accent shadow-[0_0_10px_rgba(139,92,246,0.5)]"></div>
      
      <div class="flex flex-col md:flex-row md:items-baseline gap-2 mb-2">
        <h3 class="text-xl font-bold text-white">{role.role}</h3>
        <span class="text-accent text-sm font-medium">@ {role.company}</span>
      </div>
      
      <div class="flex flex-col md:flex-row gap-2 md:gap-6 text-sm text-text-muted mb-4 font-mono">
        <span>{role.dates}</span>
        <span class="hidden md:inline">•</span>
        <span>{role.location}</span>
      </div>
      
      <ul class="space-y-2">
        {role.description.map((item) => (
          <li class="text-text-muted/90 leading-relaxed pl-4 relative before:content-['▹'] before:absolute before:left-0 before:text-accent">
            {item}
          </li>
        ))}
      </ul>
    </div>
  ))}
</div>
