---
const links = [
  { name: "Work", href: "#work" },
  { name: "Experience", href: "#experience" },
  { name: "Publications", href: "#publications" },
  { name: "Gallery", href: "#gallery" },
  { name: "Skills", href: "#skills" },
  { name: "Education", href: "#education" },
  { name: "Contact", href: "#contact" },
];
---

<nav class="fixed top-0 left-0 w-full z-50 transition-all duration-300" id="navbar">
  <div class="max-w-7xl mx-auto px-6 md:px-12 py-4 flex justify-between items-center">
    <a href="#" class="text-xl font-heading font-bold tracking-tight text-white hover:text-accent transition-colors">
      ABP<span class="text-accent">.</span>
    </a>
    
    <div class="hidden md:flex gap-8">
      {links.map((link) => (
        <a href={link.href} class="text-sm font-medium text-text-muted hover:text-white transition-colors relative group">
          {link.name}
          <span class="absolute -bottom-1 left-0 w-0 h-[1px] bg-accent transition-all duration-300 group-hover:w-full"></span>
        </a>
      ))}
    </div>

    <!-- Mobile Menu Button (Simple implementation) -->
    <button class="md:hidden text-white focus:outline-none" id="mobile-menu-btn">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
      </svg>
    </button>
  </div>
  
  <!-- Mobile Menu -->
  <div class="md:hidden hidden bg-primary/95 backdrop-blur-xl absolute top-full left-0 w-full border-b border-white/10" id="mobile-menu">
    <div class="flex flex-col p-6 gap-4">
      {links.map((link) => (
        <a href={link.href} class="text-lg font-medium text-text-muted hover:text-white transition-colors">
          {link.name}
        </a>
      ))}
    </div>
  </div>
</nav>

<script>
  const navbar = document.getElementById('navbar');
  const mobileBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      navbar?.classList.add('bg-primary/80', 'backdrop-blur-md', 'border-b', 'border-white/5');
    } else {
      navbar?.classList.remove('bg-primary/80', 'backdrop-blur-md', 'border-b', 'border-white/5');
    }
  });

  mobileBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
