---
import skills from '../data/skills.json';
---

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  {skills.map((skillGroup) => (
    <div class="glass-card p-6 rounded-xl hover:bg-white/5 transition-colors">
      <h3 class="text-lg font-bold text-white mb-4 border-b border-white/10 pb-2">{skillGroup.category}</h3>
      <div class="flex flex-wrap gap-2">
        {skillGroup.items.map((skill) => (
          <span class="px-3 py-1 text-sm text-text-muted bg-white/5 rounded-md border border-white/5 hover:border-accent/30 hover:text-white transition-all cursor-default">
            {skill}
          </span>
        ))}
      </div>
    </div>
  ))}
</div>
