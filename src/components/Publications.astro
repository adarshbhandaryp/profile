---
import publications from '../data/publications.json';
---

<div class="space-y-14">

  {/* ===================== */}
  {/* Peer-Reviewed Papers */}
  {/* ===================== */}
  {publications.peerReviewed && (
    <section>
      <h3 class="text-lg font-bold text-white mb-6 flex items-center gap-3">
        <span class="w-8 h-[1px] bg-accent"></span>
        Peer-Reviewed Publications
      </h3>

      <div class="space-y-4">
        {publications.peerReviewed.map((pub) => (
          <div class="glass-card p-6 rounded-xl">
            <h4 class="text-lg font-medium text-white mb-1">
              {pub.title}
            </h4>

            <p class="text-sm text-text-muted mb-2">
              {pub.authors}
            </p>

            <div class="flex flex-wrap gap-4 text-sm text-text-muted items-center">
              <span class="text-accent">{pub.venue}</span>
              <span>{pub.year}</span>

              {pub.status && (
                <span class="px-2 py-[2px] rounded text-xs bg-accent/10 text-accent">
                  {pub.status}
                </span>
              )}
              
              {pub.url && (
                <a href={pub.url} target="_blank" rel="noopener noreferrer" class="text-accent hover:text-white transition-colors flex items-center gap-1 ml-2">
                  <span>Access the paper</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              )}
            </div>
          </div>
        ))}
      </div>
    </section>
  )}

  {/* ================================== */}
  {/* Abstracts & Clinical Validation */}
  {/* ================================== */}
  {publications.abstractsAndClinical && (
    <section>
      <h3 class="text-lg font-bold text-white mb-6 flex items-center gap-3">
        <span class="w-8 h-[1px] bg-accent"></span>
        Abstracts & Clinical Validation Studies
      </h3>

      <div class="space-y-4">
        {publications.abstractsAndClinical.map((pub) => (
          <div class="glass-card p-6 rounded-xl">
            <h4 class="text-lg font-medium text-white mb-1">
              {pub.title}
            </h4>

            <p class="text-sm text-text-muted mb-2">
              {pub.authors}
            </p>

            <div class="flex flex-wrap gap-4 text-sm text-text-muted">
              <span class="text-accent">{pub.venue}</span>
              <span>{pub.year}</span>

              {pub.status && (
                <span class="px-2 py-[2px] rounded text-xs bg-accent-cyan/10 text-accent-cyan">
                  {pub.status}
                </span>
              )}
              
              {pub.url && (
                <a href={pub.url} target="_blank" rel="noopener noreferrer" class="text-accent hover:text-white transition-colors flex items-center gap-1 ml-2">
                  <span>Access the paper</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              )}
            </div>
          </div>
        ))}
      </div>
    </section>
  )}

  {/* ===================== */}
  {/* Other Publications */}
  {/* ===================== */}
  {publications.otherPublications && (
    <section>
      <h3 class="text-lg font-bold text-white mb-6 flex items-center gap-3">
        <span class="w-8 h-[1px] bg-accent"></span>
        Other Publications & Preprints
      </h3>

      <div class="space-y-4">
        {publications.otherPublications.map((pub) => (
          <div class="glass-card p-6 rounded-xl">
            <h4 class="text-lg font-medium text-white mb-1">
              {pub.title}
            </h4>

            <p class="text-sm text-text-muted mb-2">
              {pub.authors}
            </p>

            <div class="flex flex-wrap gap-4 text-sm text-text-muted">
              <span class="text-accent">{pub.venue}</span>
              <span>{pub.year}</span>

              {pub.status && (
                <span class="px-2 py-[2px] rounded text-xs bg-white/10 text-white">
                  {pub.status}
                </span>
              )}

              {pub.id && (
                <span class="text-xs italic opacity-70">
                  {pub.id}
                </span>
              )}

              {pub.url && (
                <a href={pub.url} target="_blank" rel="noopener noreferrer" class="text-accent hover:text-white transition-colors flex items-center gap-1 ml-2">
                  <span>Access the paper</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              )}
          </div>
        ))}
      </div>
    </section>
  )}

  {/* ========= */}
  {/* Patents */}
  {/* ========= */}
  {publications.patents && (
    <section>
      <h3 class="text-lg font-bold text-white mb-6 flex items-center gap-3">
        <span class="w-8 h-[1px] bg-accent"></span>
        Patents
      </h3>

      <div class="space-y-4">
        {publications.patents.map((pub) => (
          <div class="glass-card p-6 rounded-xl border-l-4 border-l-accent-cyan">
            <h4 class="text-lg font-medium text-white mb-1">
              {pub.title}
            </h4>

            <p class="text-sm text-text-muted mb-2">
              {pub.authors}
            </p>

            <div class="flex flex-wrap gap-4 text-sm text-text-muted">
              <span class="text-accent-cyan">{pub.venue}</span>
              <span>{pub.year}</span>

              {pub.status && (
                <span class="px-2 py-[2px] rounded text-xs bg-accent-cyan/10 text-accent-cyan">
                  {pub.status}
                </span>
              )}
              
              {pub.url && (
                <a href={pub.url} target="_blank" rel="noopener noreferrer" class="text-accent hover:text-white transition-colors flex items-center gap-1 ml-2">
                  <span>Access the paper</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              )}
            </div>
          </div>
        ))}
      </div>
    </section>
  )}

</div>
